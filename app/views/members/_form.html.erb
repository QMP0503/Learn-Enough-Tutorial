<%= form_with(model: @member, local: true, class: "needs-validation", novalidate: true) do |f| %>
  <%= render 'shared/error_messages', object: @member %>
  
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", 
        placeholder: (@member.persisted? ? "Leave blank to keep current password" : nil) %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
