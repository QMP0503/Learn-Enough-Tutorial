<% provide(:title, "Edit member") %>
<% provide(:button_text, 'Save changes') %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header bg-primary text-white text-center">
        <h1 class="mb-0">Update your profile</h1>
      </div>
      <div class="card-body p-4">
        <%= render 'form' %>
        
        <div class="gravatar_edit mt-4 text-center">
          <%= gravatar_for @member, size: 80 %>
          <div class="mt-3">
            <a href="https://gravatar.com/emails" target="_blank" rel="noopener" class="btn btn-outline-secondary btn-sm">
              <i class="fas fa-camera"></i> Change avatar
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
