<% provide(:title, "Log in") %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-info text-white text-center">
        <h1 class="mb-0">Log in</h1>
        <p class="mb-0 mt-2">Welcome back!</p>
      </div>
      <div class="card-body p-4">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= link_to "(forgot password)", new_password_reset_path, class: "float-end small text-muted" %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <div class="mb-3 form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Remember me on this computer", class: "form-check-label" %>
          </div>

          <%= f.submit "Log in", class: "btn btn-primary w-100" %>
        <% end %>

        <div class="text-center mt-3">
          <p class="mb-0">New user? <%= link_to "Sign up now!", signup_path, class: "text-decoration-none" %></p>
        </div>
      </div>
    </div>
  </div>
</div>