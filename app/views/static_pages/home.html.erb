<% if logged_in? %>
  <div class="row home-page">
    <aside class="col-md-4">
      <section class="member_info">
        <%= render 'shared/member_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Micropost Feed</h3>
        <span class="badge bg-secondary fs-6"><%= current_member.feed.count %> posts</span>
      </div>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="hero-section p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">Welcome to the Sample App</h1>
      <h2 class="col-md-8 fs-4">
        This is the home page for the
        <a href="https://www.railstutorial.org/">Ruby on Rails Tutorial</a>
        sample application.
      </h2>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>

  <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200"), "https://rubyonrails.org/" %>
<% end %>
