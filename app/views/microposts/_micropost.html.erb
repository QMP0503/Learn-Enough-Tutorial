<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.member, size: 50), micropost.member %>
  <span class="user"><%= link_to micropost.member.name, micropost.member %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_member?(micropost.member) %>
      <%= link_to "delete", micropost, data: { "turbo-method": :delete,
                                              turbo_confirm: "You sure?" },
                                      class: "text-danger" %>
    <% end %>
  </span>
</li>
